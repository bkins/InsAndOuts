<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsAndOuts.Views.HomePage"
             Title="Home">
             <!--BackgroundImageSource="love.jpg"-->
    <ContentPage.ToolbarItems >

        <ToolbarItem x:Name="Configuration"
                     IconImageSource="gearWheel.png"
                     Clicked="Configuration_OnClicked"
                     />

    </ContentPage.ToolbarItems>
    <ContentPage.Content
        >
        <StackLayout>
            
            <Button x:Name="ReportButton"
                    Text="Daily Report"
                    Clicked="ReportButton_OnClicked"
                    />

            <Button x:Name="EditDataButton"
                    Text="Edit Data"
                    Clicked="BrowseDataButton_OnClicked"
                    />

            <Button x:Name="ChartsAndReportsButton"
                    Text="Charts &amp; Reports"
                    Clicked="TendsAnalysisReportsButton_OnClicked"
                    />

            <Button x:Name="AboutButton"
                    Text="About"
                    Clicked="AboutButton_OnClicked"
                    />

            <Button x:Name="LoadTestData"
                    Text="LoadTestData"
                    Clicked="LoadTestData_OnClicked"
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>